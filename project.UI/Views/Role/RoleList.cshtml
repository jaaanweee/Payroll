@model IEnumerable<project.Data.Models.Domain.Role>

@{
    ViewData["Title"] = "Role List";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.RoleName</td>
                <td>
                    <a href="@Url.Action("EditRole", "Role", new { id = role.Id })" class="btn btn-primary">Edit</a>
                    <form method="post" action="@Url.Action("RemoveRole", "Role", new { id = role.Id })" style="display:inline;">
                        
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddRole", "Role")" class="btn btn-success">Add New Role</a>
