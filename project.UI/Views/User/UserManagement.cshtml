@model IEnumerable<project.Data.Models.Domain.Users>

@{
    ViewData["Title"] = "User Management";
}

@* Include the Navbar *@
@await Html.PartialAsync("_AdminNavbar")

@* Hero Section *@
<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="fw-bold">Manage System Users</h1>
            <p class="lead">Add, edit, deactivate users, and assign roles with ease.</p>
            <div class="d-flex gap-3">
                <a href="@Url.Action("Create", "User")" class="btn btn-dark">Add User</a>
                <a href="#" class="btn btn-outline-dark">Edit User</a>
                <a href="#" class="btn btn-outline-dark">Deactivate User</a>
            </div>
        </div>
    </div>
</div>

@* Role Management Section *@
<div class="container mt-5">
    <h3 class="fw-bold mb-3">Assign User Roles</h3>
    <p>Define user roles to ensure proper access and permissions.</p>
    <div class="d-flex gap-3">
        <a href="#" class="btn btn-outline-dark">Admin</a>
        <a href="#" class="btn btn-outline-dark">HR Manager</a>
        <a href="#" class="btn btn-outline-dark">Employee</a>
    </div>
</div>

@* User List Section *@
<div class="container mt-5">
    <h3 class="fw-bold mb-3">User List</h3>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>

                        <td>
                            <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-sm btn-outline-danger">Deactivate</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No users found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
