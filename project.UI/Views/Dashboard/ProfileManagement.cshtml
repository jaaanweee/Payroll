@{
    ViewData["Title"] = "Employee Profile Management";
}
@* Include the navbar *@
@await Html.PartialAsync("_HRNavbar")

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Employee Profile Section -->
    <div class="row gx-4">
        <!-- Employee Details Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Employee Details</h5>
                    <form>
                        <div class="mb-3">
                            <label for="employeeName" class="form-label">Employee Name</label>
                            <input type="text" class="form-control" id="employeeName" value="John Doe">
                        </div>
                        <div class="mb-3">
                            <label for="employeeId" class="form-label">Employee ID</label>
                            <input type="text" class="form-control" id="employeeId" value="E12345">
                        </div>
                        <div class="mb-3">
                            <label for="employeePosition" class="form-label">Position</label>
                            <input type="text" class="form-control" id="employeePosition" value="HR Manager">
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Salary Information Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Salary Information</h5>
                    <form>
                        <div class="mb-3">
                            <label for="salaryAmount" class="form-label">Salary</label>
                            <input type="number" class="form-control" id="salaryAmount" value="4500">
                        </div>
                        <div class="mb-3">
                            <label for="bonus" class="form-label">Bonus</label>
                            <input type="number" class="form-control" id="bonus" value="500">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Access Permissions Section -->
    <div class="row gx-4">
        <!-- Manage Access Permissions -->
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Manage Access Permissions</h5>
                    <form>
                        <div class="mb-3">
                            <label for="roleSelect" class="form-label">Role</label>
                            <select class="form-select" id="roleSelect">
                                <option value="Admin">Admin</option>
                                <option value="HR Manager" selected>HR Manager</option>
                                <option value="Employee">Employee</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="accessLevel" class="form-label">Access Level</label>
                            <input type="text" class="form-control" id="accessLevel" value="Full Access">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 18px;
        color: #333;
    }

    .display-6 {
        font-size: 28px;
    }

    .btn-dark {
        background-color: #333;
        border-color: #333;
        color: #fff;
        border-radius: 6px;
    }

    .btn-dark:hover {
        background-color: #555;
        border-color: #555;
    }

    .form-control:hover {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    }

    .form-select:hover {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    }

    .form-label {
        color: #555;
    }

    .btn-save:hover {
        background-color: #28a745;
        border-color: #28a745;
    }
</style>
