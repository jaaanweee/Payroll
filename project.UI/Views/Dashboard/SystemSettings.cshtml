@{
    ViewData["Title"] = "System Settings & Security";
}

@* Include the navbar *@
@await Html.PartialAsync("_HRNavbar")

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- System Settings Section -->
    <div class="row gx-4">
        <!-- Manage Permissions -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Manage Permissions</h5>
                    <p class="text-muted">Configure user roles and permissions.</p>
                    <a href="#" class="btn btn-dark">Manage</a>
                </div>
            </div>
        </div>

        <!-- Security Protocols -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Security Protocols</h5>
                    <p class="text-muted">Update password policies and MFA settings.</p>
                    <a href="#" class="btn btn-dark">Update</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity Logs Section -->
    <div class="row gx-4">
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Activity Logs</h5>
                    <p class="text-muted">Track changes to payroll data and monitor system security.</p>
                    <div style="height: 300px; background-color: #f9f9f9;" class="d-flex align-items-center justify-content-center">
                        <p class="text-muted">[Logs Placeholder]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 18px;
        color: #333;
    }

    .btn-dark {
        background-color: #333;
        border-color: #333;
        color: #fff;
        border-radius: 6px;
    }

    .btn-dark:hover {
        background-color: #555;
        border-color: #555;
    }
</style>
