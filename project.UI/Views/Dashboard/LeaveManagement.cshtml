@{
    ViewData["Title"] = "Leave and Attendance Approvals";
}
@* Include the navbar *@
@await Html.PartialAsync("_HRNavbar")

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Leave Requests Section -->
    <div class="row gx-4">
        <!-- Pending Leave Requests -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Pending Leave Requests</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Leave Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Doe</td>
                                <td>Sick Leave</td>
                                <td>2025-02-10</td>
                                <td>2025-02-12</td>
                                <td>Pending</td>
                                <td>
                                    <button class="btn btn-success btn-sm">Approve</button>
                                    <button class="btn btn-danger btn-sm">Reject</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td>Vacation</td>
                                <td>2025-03-01</td>
                                <td>2025-03-05</td>
                                <td>Pending</td>
                                <td>
                                    <button class="btn btn-success btn-sm">Approve</button>
                                    <button class="btn btn-danger btn-sm">Reject</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Approved Leave Requests -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Approved Leave Requests</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Leave Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Michael Scott</td>
                                <td>Vacation</td>
                                <td>2025-01-20</td>
                                <td>2025-01-25</td>
                                <td>Approved</td>
                            </tr>
                            <tr>
                                <td>Dwight Schrute</td>
                                <td>Sick Leave</td>
                                <td>2025-01-28</td>
                                <td>2025-01-30</td>
                                <td>Approved</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Section -->
    <div class="row gx-4">
        <!-- Attendance Summary -->
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Attendance Summary</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Days Present</th>
                                <th>Days Absent</th>
                                <th>Total Attendance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Doe</td>
                                <td>22</td>
                                <td>3</td>
                                <td>25</td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td>20</td>
                                <td>5</td>
                                <td>25</td>
                            </tr>
                            <tr>
                                <td>Michael Scott</td>
                                <td>18</td>
                                <td>7</td>
                                <td>25</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Integration with Attendance System -->
    <div class="row gx-4">
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Attendance System Integration</h5>
                    <form>
                        <div class="mb-3">
                            <label for="attendanceFile" class="form-label">Upload Attendance Data</label>
                            <input type="file" class="form-control" id="attendanceFile">
                        </div>
                        <button class="btn btn-dark">Integrate with System</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 18px;
        color: #333;
    }

    .display-6 {
        font-size: 28px;
    }

    .btn-dark {
        background-color: #333;
        border-color: #333;
        color: #fff;
        border-radius: 6px;
    }

    .btn-dark:hover {
        background-color: #555;
        border-color: #555;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .form-control:hover {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    }

    .form-label {
        color: #555;
    }
</style>
