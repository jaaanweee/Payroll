@{
    ViewData["Title"] = ""; // Set the page title accordingly
}
@* Include the navbar *@
@await Html.PartialAsync("_AdminNavbar")

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="row mt-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Payroll Processing</h5>
                    <p class="card-text">
                        Calculate and process payroll for all employees. Preview payroll summary before finalizing payments, generate payslips, and export payroll data.
                    </p>
                    <button class="btn btn-dark">Start Processing</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Adjustments</h5>
                    <p class="card-text">
                        Add allowances or deductions for specific employees and override payroll calculations for specific cases.
                    </p>
                    <button class="btn btn-dark">Manage Adjustments</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Payment Integration</h5>
                    <p class="card-text">
                        Initiate payments (direct deposit, check, etc.) and track payment statuses.
                    </p>
                    <button class="btn btn-dark">Initiate Payments</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Reports</h5>
                    <p class="card-text">
                        Generate and download payroll reports in CSV or PDF formats.
                    </p>
                    <button class="btn btn-dark">Download Reports</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 8px;
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-weight: bold;
        font-size: 18px;
        color: #333;
    }

    .card-text {
        font-size: 14px;
        color: #555;
    }

    .btn-dark {
        background-color: #333;
        border-color: #333;
        color: #fff;
    }

        .btn-dark:hover {
            background-color: #555;
            border-color: #555;
        }
</style>
