@{
    ViewData["Title"] = "Payroll Processing & Automation";
}

@await Html.PartialAsync("_HRNavbar")

<div class="container-fluid p-5">
    <div class="text-center mb-5">
        
        <p class="lead">Efficiently manage and process payroll with automated calculations and clear notifications.</p>
    </div>

    <!-- Payroll Overview Section -->
    <div class="row g-4">
        <!-- g-4 adds a gap between cards -->
        <!-- Payroll Processing Hub -->
        <div class="col-lg-8">
            <div class="p-4 bg-white shadow-lg rounded-3 card-hover">
                <h4 class="text-dark text-uppercase fw-bold mb-4">Payroll Processing Hub</h4>
                <p class="lead">Review and process employee payroll quickly and efficiently. You can adjust pay if necessary.</p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Base Pay</th>
                            <th>Bonus</th>
                            <th>Overtime</th>
                            <th>Total Pay</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John Doe</td>
                            <td>$4,000</td>
                            <td>$500</td>
                            <td>$200</td>
                            <td>$4,700</td>
                            <td><button class="btn btn-outline-dark btn-sm">Adjust</button></td>
                        </tr>
                        <tr>
                            <td>Jane Smith</td>
                            <td>$3,500</td>
                            <td>$300</td>
                            <td>$150</td>
                            <td>$3,950</td>
                            <td><button class="btn btn-outline-dark btn-sm">Adjust</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Notifications Section -->
        <div class="col-lg-4">
            <div class="p-4 bg-white shadow-lg rounded-3 card-hover">
                <h4 class="text-dark text-uppercase fw-bold mb-4">Payroll Notifications</h4>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Payroll Deadline
                        <span class="badge bg-danger rounded-pill">Due Soon</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Pending Approvals
                        <span class="badge bg-warning rounded-pill">3 Pending</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Tax Calculation Update
                        <span class="badge bg-success rounded-pill">Completed</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Automatic Calculations Section -->
    <div class="row g-4">
        <!-- g-4 adds a gap between cards -->
        <div class="col-lg-12">
            <div class="p-4 bg-white shadow-lg rounded-3 card-hover">
                <h4 class="text-dark text-uppercase fw-bold mb-4">Automatic Calculations</h4>
                <p class="lead">Our system automatically calculates taxes, deductions, overtime, and bonuses. Below is a sample payroll calculation:</p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Base Pay</th>
                            <th>Tax Deduction</th>
                            <th>Bonus</th>
                            <th>Overtime</th>
                            <th>Total Pay</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John Doe</td>
                            <td>$4,000</td>
                            <td>$400</td>
                            <td>$500</td>
                            <td>$200</td>
                            <td>$4,700</td>
                        </tr>
                        <tr>
                            <td>Jane Smith</td>
                            <td>$3,500</td>
                            <td>$350</td>
                            <td>$300</td>
                            <td>$150</td>
                            <td>$3,950</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f9fafb;
    }

    .btn-outline-dark {
        border-color: #343a40;
        color: #343a40;
    }

        .btn-outline-dark:hover {
            background-color: #343a40;
            color: white;
            border-color: #343a40;
        }

    .bg-light {
        background-color: #f9f9f9 !important;
    }

    .shadow-lg {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    .rounded-3 {
        border-radius: 12px;
    }

    .form-control, .form-select {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #343a40;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 1.5rem; /* Adds space between cards */
    }

        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px rgba(0, 0, 0, 0.1);
        }

    .list-group-item {
        border: none;
        font-size: 1.1rem;
    }
</style>
