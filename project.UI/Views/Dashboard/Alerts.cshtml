@{
    ViewData["Title"] = "Notifications & Alerts";
}
@* Include the navbar *@
@await Html.PartialAsync("_EmployeeNavbar")

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Notifications Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Recent Notifications</h5>
                    <ul class="list-group mt-3">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Salary Deposit Alert</div>
                                Your salary for January 2025 has been deposited into your account.
                            </div>
                            <span class="badge bg-success rounded-pill">New</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Leave Approval</div>
                                Your leave request for February 10–15, 2025, has been approved.
                            </div>
                            <span class="badge bg-primary rounded-pill">New</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Tax Information Update</div>
                                Your tax deduction details have been updated for 2025. Please review your profile.
                            </div>
                            <span class="badge bg-warning rounded-pill">Alert</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Policy Update</div>
                                A new company policy on remote work is now available for review.
                            </div>
                            <span class="badge bg-secondary rounded-pill">Read</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Settings Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Notification Preferences</h5>
                    <form class="mt-3">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="salaryAlerts" checked>
                            <label class="form-check-label" for="salaryAlerts">
                                Receive salary deposit alerts
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="leaveAlerts" checked>
                            <label class="form-check-label" for="leaveAlerts">
                                Receive leave approval/rejection notifications
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="taxUpdates">
                            <label class="form-check-label" for="taxUpdates">
                                Receive tax information updates
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="policyUpdates">
                            <label class="form-check-label" for="policyUpdates">
                                Receive company policy updates
                            </label>
                        </div>
                        <button type="submit" class="btn btn-dark">Save Preferences</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 18px;
        color: #333;
    }

    .list-group-item {
        border: none;
        padding: 15px;
        font-size: 16px;
    }

    .badge {
        font-size: 14px;
        padding: 8px 12px;
    }

    .btn-dark {
        background-color: #333;
        border-color: #333;
        color: #fff;
    }

    .btn-dark:hover {
        background-color: #555;
        border-color: #555;
    }
</style>
