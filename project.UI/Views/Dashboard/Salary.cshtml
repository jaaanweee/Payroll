@{
    ViewData["Title"] = "Salary Information";
}
@* Include the navbar *@
@await Html.PartialAsync("_EmployeeNavbar")

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Pay Slips Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Pay Slips</h5>
                    <table class="table table-bordered mt-3">
                        <thead class="table-light">
                            <tr>
                                <th>Month</th>
                                <th>Gross Salary</th>
                                <th>Net Salary</th>
                                <th>Download</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>December 2024</td>
                                <td>$5,000</td>
                                <td>$4,500</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">Download</button>
                                </td>
                            </tr>
                            <tr>
                                <td>November 2024</td>
                                <td>$5,000</td>
                                <td>$4,500</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">Download</button>
                                </td>
                            </tr>
                            <tr>
                                <td>October 2024</td>
                                <td>$5,000</td>
                                <td>$4,500</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">Download</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Deductions and Benefits Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Deductions & Benefits</h5>
                    <div class="row mt-4">
                        <!-- Deductions -->
                        <div class="col-md-6 mb-4">
                            <h6 class="fw-bold">Deductions</h6>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Income Tax
                                    <span class="text-danger">- $1,000</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Insurance
                                    <span class="text-danger">- $200</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Other Deductions
                                    <span class="text-danger">- $100</span>
                                </li>
                            </ul>
                        </div>

                        <!-- Benefits -->
                        <div class="col-md-6 mb-4">
                            <h6 class="fw-bold">Benefits</h6>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Health Insurance
                                    <span class="text-success">+ $500</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Transportation Allowance
                                    <span class="text-success">+ $300</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Food Allowance
                                    <span class="text-success">+ $200</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 18px;
        color: #333;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .list-group-item {
        font-size: 14px;
        color: #555;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-success {
        color: #28a745;
    }
</style>
