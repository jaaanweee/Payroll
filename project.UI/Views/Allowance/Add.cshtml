@model Allowance
@{
    
} 

<h3>Update Allowance Allowance</h3>
<a href="/Allowance/DisplayAll" class="my-2 btn btn-primary">Dispaly All</a>

<form asp-action="Add">
    <div class="mb-3">
        <label asp-for="Allowance_Name" class="form-label">Allowance_Name</label>
        <input asp-for="Allowance_Name" type="text" class="form-control">
        <span class="text-danger" asp-validation-for="Allowance_Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
   
    @if (TempData["msg"] != null)
    {
    <div class="mb-3">
        @TempData["msg"]
    </div>
    }
    <div class="mb-3">
        <button type ="submit" class="btn btn-primary">Save</button>
    </div>
</form>