@model project.Data.Models.Domain.Leaves

@* Include the navbar *@
@await Html.PartialAsync("_EmployeeNavbar")

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <!-- Leave Requests Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div class="alert alert-success mt-3 message" role="alert">
                            @TempData["AlertMessage"]
                        </div>
                    }

                    <h5 class="card-title fw-bold">Leave Requests</h5>
                    <form class="mt-3" method="post" asp-action="Leave" asp-controller="Leave">
                        @* Hidden fields for LeaveID and EmployeeID *@
                        <input type="hidden" asp-for="UserID" value="@Model.UserID" /> 
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="leaveType" class="form-label">Leave Type</label>
                                <select class="form-select" asp-for="LeaveType">
                                    <option value="Vacation">Vacation</option>
                                    <option value="Sick Leave">Sick Leave</option>
                                    <option value="Maternity Leave">Maternity Leave</option>
                                    <option value="Unpaid Leave">Unpaid Leave</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="startDate" class="form-label">Start Date</label>
                                <input type="date" class="form-control" asp-for="StartDate" id="startDate">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="endDate" class="form-label">End Date</label>
                                <input type="date" class="form-control" asp-for="EndDate" id="endDate">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="reason" class="form-label">Reason</label>
                            <textarea class="form-control" asp-for="Reason" rows="3" placeholder="Enter reason for leave"></textarea>
                        </div>
                        <button type="submit" class="btn btn-dark">Submit Request</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Summary Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Attendance Summary</h5>
                    <table class="table table-bordered mt-3">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Hours Worked</th>
                                <th>Overtime</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2025-01-20</td>
                                <td class="text-success">Present</td>
                                <td>8 hrs</td>
                                <td>2 hrs</td>
                            </tr>
                            <tr>
                                <td>2025-01-19</td>
                                <td class="text-danger">Absent</td>
                                <td>0 hrs</td>
                                <td>0 hrs</td>
                            </tr>
                            <tr>
                                <td>2025-01-18</td>
                                <td class="text-success">Present</td>
                                <td>9 hrs</td>
                                <td>1 hr</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 12px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .card-title {
        font-size: 18px;
        color: #333;
    }

    .form-label {
        font-weight: bold;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .text-success {
        color: #28a745;
    }

    .text-danger {
        color: #dc3545;
    }

    .btn-dark {
        background-color: #333;
        border-color: #333;
        color: #fff;
    }

        .btn-dark:hover {
            background-color: #555;
            border-color: #555;
        }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').value = today;
        document.getElementById('endDate').value = today;
    });
</script>
